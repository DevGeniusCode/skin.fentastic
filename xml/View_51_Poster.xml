<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_51_Poster">
		<!-- This section contains the settings for the main button to achieve proper animations -->
		<control type="button" id="20000">
			<description>Dummy button to get animations right (hide focusedlayout on animations)</description>
			<include>HiddenObject</include>
			<!-- Animations for showing/hiding the button -->
			<animation effect="fade" delay="500" time="0" start="100" end="0">Visible</animation>
			<animation effect="fade" delay="500" time="0" start="100" end="0">WindowOpen</animation>
			<onclick>noop</onclick>
			<visible>Control.IsVisible(51)</visible>
		</control>
        <!-- dark background poster -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>100%</height>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
            <animation effect="fade" time="200">VisibleChange</animation>
            <texture colordiffuse="button_focus2">dialogs/dialog-bg-nobo.png</texture>
            <visible>Control.IsVisible(51)</visible>
        </control>

		<!-- This section defines the poster view type -->
		<control type="group">
			<description>Poster Viewtype</description>
			<centertop>50%</centertop>
			<height>720</height>
			<!-- dark background strip -->
			<control type="image">
				<left>0</left>
				<top>4</top>
				<width>100%</width>
				<height>332</height>
				<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
				<animation effect="fade" time="200">VisibleChange</animation>
				<texture colordiffuse="button_focus2">dialogs/dialog-bg-nobo.png</texture>
				<visible>Control.IsVisible(51)</visible>
			</control>
			<!-- KODI-RD-IL ADDITION: Includes the Poster View Art Logo content -->
			<include content="Poster_View_Art_Logo">
			</include>
			<!-- ##################### -->

			<!-- This group defines the main container for the poster view and its visibility -->
			<control type="group">
				<visible>Control.IsVisible(51)</visible>
				<include>Visible_Left</include>
				<include>OpenClose_Left</include>
				<control type="fixedlist" id="51">
					<right>-10</right>
					<top>0</top>
					<width>110%</width>
					<height>704</height>
					<focusposition>1</focusposition>
					<movement>0</movement>
					<pagecontrol>5199</pagecontrol>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<orientation>horizontalRtl</orientation>
					<onright>51</onright>
					<onup>9000</onup>
					<ondown>5199</ondown>
					<onleft>51</onleft>
					<hitrect x="100" y="0" w="800" h="400" />
					<!-- Visibility conditions for the list based on the content type -->
					<visible>Container.Content(movies) | Container.Content(seasons) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(games)</visible>
					<preloaditems>1</preloaditems>
					<viewtype label="20021">icon</viewtype>

					<!-- Defines the layout for each item in the list -->
					<itemlayout width="215">
						<control type="group">
							<left>-118</left>
							<top>18</top>
							<include>InfoWallMovieLayout</include>
						</control>
					</itemlayout>

					<!-- Focused layout for the list, animated adjacent items -->
					<focusedlayout width="490">
						<control type="group">
							<control type="group">
								<right>-220</right>
								<top>18</top>
								<visible>Container.OnScrollPrevious</visible>
								<visible>Control.IsVisible(20000)</visible>
								<animation effect="fade" time="200" start="100" end="0">Hidden</animation>
								<include>InfoWallMovieLayout</include>
							</control>
							<control type="group">
								<right>-40</right>
								<top>18</top>
								<visible>Container.OnScrollNext</visible>
								<visible>Control.IsVisible(20000)</visible>
								<animation effect="fade" time="200" start="100" end="0">Hidden</animation>
								<include>InfoWallMovieLayout</include>
							</control>
						</control>
					</focusedlayout>
				</control>

				<!-- Title and plot section for the selected item -->
				<control type="group">
					<top>25</top>
					<control type="group">
						<right>635</right>
						<top>480</top>
						<height>245</height>
						<!-- This section displays information for collections or empty plots -->
						<visible>ListItem.IsCollection + String.IsEmpty(ListItem.PlotOutline) + String.IsEmpty(ListItem.Plot)</visible>
						<include content="InfoList">
							<param name="bottom" value="0" />
							<param name="sortby" value="year" />
							<param name="sortorder" value="ascending" />
							<param name="font" value="font13" />
						</include>
					</control>

					<!-- Icon indicating watched status -->
					<control type="image">
						<right>645</right>
						<top>337</top>
						<width>32</width>
						<height>32</height>
						<texture colordiffuse="unfocused_text">$VAR[ListWatchedIconVar]</texture>
					</control>

					<!-- Title label for the selected item -->
					<control type="label">
						<align>right</align>
						<right>600</right>
						<top>322</top>
						<left>50</left>
						<top>322</top>
						<height>40</height>
						<label>$INFO[ListItem.Label]$VAR[ListSubLabelVar]</label>
						<font>font45_title</font>
						<!-- KODI-RD-IL ADDITION: Text color for the title -->
						<textcolor>yellow</textcolor>
						<!-- ##################### -->
						<shadowcolor>text_shadow</shadowcolor>
					</control>
						<!-- ratings                    	-->
						<control type="grouplist">
						<height>90</height>
						<orientation>horizontal</orientation>
						<itemgap>25</itemgap>
						<aligny>center</aligny>
						<visible>[String.IsEqual(ListItem.DBtype,movie) | String.IsEqual(ListItem.DBtype,tvshow) | String.IsEqual(ListItem.DBtype,season) | String.IsEqual(ListItem.DBtype,episode)] + !String.IsEmpty(ListItem.Genre)</visible>

						<!-- KODI-RD-IL ADDITION -->
						<align>right</align>
                        <right>600</right>
                        <top>400</top>
						<!-- ##################### -->

						<control type="grouplist">
							<width>60</width>
							<orientation>vertical</orientation>
							<itemgap>5</itemgap>
							<align>center</align>
							<visible>![String.IsEmpty(Window.Property(fentastic.metascore)) | Skin.HasSetting(Disable.MetacriticRating)]</visible>
							<control type="image">
								<width>60</width>
								<height>36</height>
								<aspectratio>keep</aspectratio>
								<align>center</align>
								<aligny>center</aligny>
								<texture>$INFO[Window.Property(fentastic.metascoreImage)]</texture>
							</control>
							<control type="label">
								<width max="60">auto</width>
								<height>42</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>$INFO[Window.Property(fentastic.metascore)]</label>
								<textcolor>unfocused_text</textcolor>
							</control>
						</control>
						<control type="grouplist">
							<width>60</width>
							<orientation>vertical</orientation>
							<itemgap>5</itemgap>
							<align>center</align>
							<visible>![String.IsEmpty(Window.Property(fentastic.tomatoMeter)) | Skin.HasSetting(Disable.RTCRating)]</visible>
							<control type="image">
								<width>60</width>
								<height>36</height>
								<aspectratio>keep</aspectratio>
								<align>center</align>
								<aligny>center</aligny>
								<texture>$INFO[Window.Property(fentastic.tomatoImage)]</texture>
							</control>
							<control type="label">
								<width max="60">auto</width>
								<height>42</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>$INFO[Window.Property(fentastic.tomatoMeter)]</label>
								<textcolor>unfocused_text</textcolor>
							</control>
						</control>
						<control type="grouplist">
							<width>60</width>
							<orientation>vertical</orientation>
							<itemgap>5</itemgap>
							<align>center</align>
							<visible>![String.IsEmpty(Window.Property(fentastic.tomatoUserMeter)) | Skin.HasSetting(Disable.RTARating)]</visible>
							<control type="image">
								<width>60</width>
								<height>36</height>
								<aspectratio>keep</aspectratio>
								<align>center</align>
								<aligny>center</aligny>
								<texture>$INFO[Window.Property(fentastic.tomatoUserImage)]</texture>
							</control>
							<control type="label">
								<width max="60">auto</width>
								<height>42</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>$INFO[Window.Property(fentastic.tomatoUserMeter)]</label>
								<textcolor>unfocused_text</textcolor>
							</control>
						</control>
						<control type="grouplist">
							<width>60</width>
							<orientation>vertical</orientation>
							<itemgap>5</itemgap>
							<align>center</align>
							<visible>![String.IsEmpty(Window.Property(fentastic.imdbRating)) | Skin.HasSetting(Disable.IMDbRating)]</visible>
							<control type="image">
								<width>60</width>
								<height>36</height>
								<aspectratio>keep</aspectratio>
								<align>center</align>
								<aligny>center</aligny>
								<texture>$INFO[Window.Property(fentastic.imdbImage)]</texture>
							</control>
							<control type="label">
								<width max="60">auto</width>
								<height>42</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>$INFO[Window.Property(fentastic.imdbRating)]</label>
								<textcolor>unfocused_text</textcolor>
							</control>
						</control>
						<control type="grouplist">
							<width>77</width>
							<orientation>vertical</orientation>
							<itemgap>5</itemgap>
							<align>center</align>
							<visible>![String.IsEmpty(Window.Property(fentastic.popularRating)) | Skin.HasSetting(Disable.IMDbPopularRating)]</visible>
							<control type="image">
								<width>87</width>
								<height>36</height>
								<aspectratio>keep</aspectratio>
								<align>center</align>
								<aligny>center</aligny>
								<texture>$INFO[Window.Property(fentastic.popularImage)]</texture>
							</control>
							<control type="label">
								<width max="87">auto</width>
								<height>42</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>$INFO[Window.Property(fentastic.popularRating)]</label>
								<textcolor>unfocused_text</textcolor>
							</control>
						</control>
						<control type="grouplist">
							<width>65</width>
							<orientation>vertical</orientation>
							<itemgap>8</itemgap>
							<align>center</align>
							<visible>![String.IsEmpty(Window.Property(fentastic.tmdbRating)) | Skin.HasSetting(Disable.TMDbRating)]</visible>
							<control type="image">
								<width>65</width>
								<height>33</height>
								<aspectratio>keep</aspectratio>
								<align>center</align>
								<aligny>center</aligny>
								<texture>$INFO[Window.Property(fentastic.tmdbImage)]</texture>
							</control>
							<control type="label">
								<width max="65">auto</width>
								<height>42</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>$INFO[Window.Property(fentastic.tmdbRating)]</label>
								<textcolor>unfocused_text</textcolor>
							</control>
						</control>
					</control>
										<!-- Textbox for the plot description -->
					<control type="textbox">
						<align>right</align>
						<right>600</right>
						<top>492</top>
						<height>335</height>
						<left>115</left>
						<autoscroll time="3000" delay="7000" repeat="5000">!System.HasActiveModalDialog + Skin.HasSetting(AutoScroll)</autoscroll>
						<label>$VAR[PlotTextBoxVar]</label>
						<textcolor>unfocused_text</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
						<visible>![ListItem.IsCollection + String.IsEmpty(ListItem.PlotOutline) + String.IsEmpty(ListItem.Plot)]</visible>
					</control>
				</control>
			</control>
		</control>
		<control type="group">
			<!-- This group defines the main layout for the poster view on the right side -->
			<centertop>50%</centertop>
			<height>670</height>
			<right>101</right>
			<depth>DepthContentPopout</depth>
			<visible>Control.IsVisible(51)</visible>
			<include>OpenClose_Right</include>
			<include>Visible_Right</include>
			<control type="group">
				<!-- Image control for the main poster thumbnail -->
				<control type="image">
					<right>4</right>
					<top>4</top>
					<width>476</width>
					<height>716</height>
					<fadetime>200</fadetime>
					<!-- <aspectratio>scale</aspectratio> -->
					<texture diffuse="masks/poster-50.png" fallback="DefaultMovies.png" background="true">$VAR[PosterThumbVar]</texture>
				</control>

				<!-- Overlay image control that appears when certain conditions are met -->
				<control type="image">
					<right>4</right>
					<top>570</top>
					<width>476</width>
					<height>150</height>
					<texture colordiffuse="CCFFFFFF">overlays/overlayfade51.png</texture>
					<visible>String.IsEqual(ListItem.DBtype,movie) + !String.IsEmpty(Container($PARAM[id]).ListItem.Property(WatchedProgress)) + !Integer.IsEqual(Container($PARAM[id]).ListItem.Property(WatchedProgress),0)</visible>
				</control>

				<!-- Label showing the watched progress of the movie -->
				<control type="label">
					<right>275</right>
					<top>680</top>
					<width>180</width>
					<!-- KODI-RD-IL CHANGES -->
					<label>$INFO[ListItem.Property(WatchedProgress)]% $LOCALIZE[700013]</label>
					<!-- ##################### -->
					<font>font20_title</font>
					<shadowcolor>text_shadow</shadowcolor>
					<align>right</align>
					<visible>String.IsEqual(ListItem.DBtype,movie) + !String.IsEmpty(Container($PARAM[id]).ListItem.Property(WatchedProgress)) + !Integer.IsEqual(Container($PARAM[id]).ListItem.Property(WatchedProgress),0)</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
				</control>

				<!-- KODI-RD-IL ADDITION -->
				<!-- Studio logo image, shown when the studio name is available -->
				<control type="image">
					<animation effect="fade" start="0" end="100" time="400">VisibleChange</animation>
					<visible>!String.IsEmpty(ListItem.Studio)</visible>
					<left>455r</left>
					<top>0</top>
					<width>120</width>
					<height>90</height>
					<aspectratio align="left" aligny="center" scalediffuse="false">keep</aspectratio>
					<texture>kodirdil/studiologos/$INFO[ListItem.Studio].png</texture>
				</control>
				<!-- ##################### -->
				<!-- Group for displaying the rating circle -->
				<control type="group">
					<left>50r</left>
					<top>-14</top>
					<include content="RatingCircle">
						<param name="animation" value="True" />
						<param name="left">-73</param>
						<param name="top">18</param>
						<param name="width">119</param>
						<param name="height">119</param>
						<param name="label-left">-16</param>
						<param name="label-top">38</param>
						<param name="cornerdiffuse">overlays/overlaybg4.png</param>
					</include>
				</control>
			</control>

			<!-- Group for TV show specific elements -->
			<control type="group">
				<visible>String.IsEqual(ListItem.DBtype,tvshow)</visible>
				<control type="image">
					<right>4</right>
					<top>570</top>
					<width>476</width>
					<height>150</height>
					<texture colordiffuse="CCFFFFFF">overlays/overlayfade51.png</texture>
					<visible>!String.IsEmpty(ListItem.Art(poster))</visible>
				</control>

				<!-- Label showing total seasons and episodes of the TV show -->
				<control type="label">
					<right>60</right>
					<top>684</top>
					<width>435</width>
					<height>24</height>
					<!-- KODI-RD-IL CHANGES -->
					<label>$INFO[ListItem.Property(TotalSeasons)] $VAR[SeasonCorrectLabel] / $INFO[ListItem.Property(TotalEpisodes)] $LOCALIZE[7000161]</label>
					<!-- ##################### -->
					<font>font20_title</font>
					<shadowcolor>text_shadow</shadowcolor>
					<align>right</align>
					<aligny>center</aligny>
				</control>

				<!-- Image for indicating played episodes -->
				<control type="image">
                    <left>50r</left>
					<top>684</top>
					<width>24</width>
					<height>24</height>
					<texture>lists/played-total.png</texture>
					<align>right</align>
					<aligny>center</aligny>
				</control>
			</control>

			<!-- Progress bar indicating how much of the item has been played -->
			<control type="progress">
				<right>4</right>
				<top>702</top>
				<width>476</width>
				<height>1</height>
				<texturebg></texturebg>
				<midtexture colordiffuse="button_focus2" border="3">progress/texturebg_alt_white.png</midtexture>
				<info>ListItem.PercentPlayed</info>
				<visible>!Integer.IsEqual(ListItem.PercentPlayed,0)</visible>
			</control>
		</control>
	</include>

	<!-- KODI-RD-IL ADDITION -->
	<!-- Include for displaying the ClearArt logo -->
	<include name="Poster_View_Art_Logo">
	<param name="top" default="-105"/>
	<param name="right" default="50%"/>
		<definition>
			<control type="group">
				<visible>Control.IsVisible(51)</visible>
				<control type="image">
					<top>-150</top>
					<right>42%</right>
					<width>320</width>
					<height>130</height>
					<aspectratio scalediffuse="false" align="right" aligny="center">keep</aspectratio>
					<texture>$VAR[ClearArtLogo]</texture>
				</control>
			</control>
		</definition>
	</include>
	<!-- ##################### -->
	
</includes>
